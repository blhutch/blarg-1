<h2>Edit Post</h2>

<% # Title, Tags, Text %>
<!-- Title, Tags, Text -->

<%= form_for(@post) do |f| %>
  <div class="edit-input">
    <%= f.label :title %>
    <%= f.text_field :title, size: 40 %>
  </div>

  <div class="edit-input">
    <%= f.label :tags %>
    <%= f.text_field :tags, :value => "#{(@post.tags.size > 1) ? @post.tags.map(&:name).join(', ') : @post.tags.first.name}", size: 40 %>
  </div> 

  <div class="edit-input">
    <%= f.label :content %>
    <br/>
    <%= f.text_area :content, rows: 40, cols: 80 %>
  </div>

  <br/>
  <div><%= submit_tag 'Save' %></div>
<% end %>

<br/>
<div>
  <%= link_to "Back", :back %>
</div>